<%= render "layouts/header" %>



<div class="container">


<%= link_to "Sign out", destroy_user_session_path, :method => :delete %>

<h1>Listing dealers</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Company</th>
      <th>Website</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dealers.each do |dealer| %>
      <tr>
        <td><%= dealer.name %></td>
        <td><%= dealer.email %></td>
        <td><%= dealer.company %></td>
        <td><%= dealer.website %></td>
        <td><%= dealer.phone %></td>
        <td><%= link_to 'Show', dealer %></td>
        <td><%= link_to 'Edit', edit_dealer_path(dealer) %></td>
        <td><%= link_to 'Destroy', dealer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Dealer', new_dealer_path %>

</div><!-- container -->

<%= render "layouts/footer" %>
